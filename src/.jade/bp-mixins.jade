//- 可以自由添加Parsely validation条件的text
mixin text(label, value, validations)
  +__input(label, value)
    != "<input type='text' name=" + value + " value='{{bs \"" + value + "\"}}'" + (validations? validations : '') + "/>"
    //- input(type='text', name=value, value!="{{bs '#{value}'}}") 

mixin no-blank-text(label, value)
  +text(label, value, "parsley-notblank='true' parsley-trigger='change'")

mixin min-text(label, value, min)
  +text(label, value, "parsley-minlength='" + min + "' parsley-trigger='change'")

mixin max-text(label, value, max)
  +text(label, value, "parsley-maxlength='" + max + "' parsley-trigger='change'")

