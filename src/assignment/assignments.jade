include ../.jade/bp-mixins
template(name='assignments-list')
  +table('assignments', ['题目', '要求', '截止时间'], ['title', 'requirement', 'deadline'])

mixin my-fieldset(title)
  +fieldset(title)
    +row()
      +text('题目', 'title')
      //- +text('要求', 'requirement')
      +no-blank-text('要求', 'requirement', span=6)
      //- +text('中文内容', '中文内容')
      +min-text('中文内容', '中文内容', min=6)
    +row()
      +text('截止时间', 'deadline')
      +text('发布时间', 'createdAtTime')
      +number('截止时间', null, false)
      +email('email', false) 
    +row()
      +ahead('ahead', 'ahead', ['2012-03-01', '2013-01-01', '日本']) 

template(name='assignment')
  +form('assignments', 'assignment')
    //- 这些表单控件都是 label，attr，options的参数结构
    +my-fieldset('题目基本要求')
    +my-fieldset('下一个题目的要求')
    