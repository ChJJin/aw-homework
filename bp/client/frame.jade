template(name='layout')
  .container
    header
      | {{> bp-main-nav}}
    aside.left-sidebar
      | {{> bp-second-nav}}
    article.main-content
      | {{yield}}      
    aside.right-sidebar
    footer

template(name='bp-banner')
  i.fa.fa-camera-retro fa-camera-retro
  a(href='/') BP Banner

template(name='bp-main-nav')
  div.main-nav
    ul
      li
        | {{> bp-banner}}
      | {{#each main-nav-paths}}
      li
        a(href="{{pathFor this.path}}") {{this.name}}
      | {{/each}}
      li.pull-right
        {{loginButtons}}


