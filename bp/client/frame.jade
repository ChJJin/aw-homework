head
  meta(name='viewport', content='width=device-width, initial-scale=1')
  script(src='/lib/parsley.messages.zh_cn.js')
  script(src='/lib/parsley.js')
  script(src='/lib/typeahead.js')
  script(src='/lib/select2/select2.js')
